!!!
%html
  %head
    %title Gryffindor
    = stylesheet_link_tag :all
    = javascript_include_tag :defaults
    = csrf_meta_tag
  %body
    #container
      #header
        #logo
          Railsbridge
        #login
          - if user_signed_in?
            = "Signed in as #{current_user.email}."
            = link_to 'Sign out', destroy_user_session_path
          - else
            = link_to 'Sign in', new_user_session_path
            or
            = link_to 'Sign up', new_user_registration_path

        %ul.navigation
          %li Search
          %li Search
          %li Search
          %li Search
          %li Search
          %li Preferences

      = yield
      #footer
        %ul.navigation
          %li Lorem
          %li Lorem
          %li Lorem
          %li Lorem
          %li Lorem
          %li Lorem
