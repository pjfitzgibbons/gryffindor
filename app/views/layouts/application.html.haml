!!!
%html
  %head
    %title Gryffindor
    = stylesheet_link_tag :all
    = javascript_include_tag :defaults
    = csrf_meta_tag
  %body
    #container
      #header
        #logo
          = link_to 'Railsbridge', root_url
        #login
          - if user_signed_in?
            Signed in as
            = link_to current_user.email, '/users/edit'
            %br
            = link_to 'Sign out', destroy_user_session_path
          - else
            = link_to 'Sign in', new_user_session_path
            or
            = link_to 'Sign up', new_user_registration_path

        %ul.navigation
          %li= link_to 'Locations', locations_path
          %li Search
          %li Search
          %li Search
          %li Search
          %li Preferences

      #flash
        %p.notice
          = notice
        %p.alert
          = alert

      = yield
      #footer
        %ul.navigation
          %li Lorem
          %li Lorem
          %li Lorem
          %li Lorem
          %li Lorem
          %li Lorem
